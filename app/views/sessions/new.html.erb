<div class="flex items-center justify-center bg-white">
  <div class="w-full max-w-md bg-white border border-gray-300 rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-black mb-6 text-center">Login</h1>

    <%= form_with url: sessions_path, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-600" %>
        <%= f.text_field :email, class: "mt-1 block w-full px-4 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-600" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      
      <div>
        <%= f.submit "Entrar", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <span class="text-sm text-gray-600">NÃ£o tem uma conta?</span>
      <%= link_to "Cadastre-se", signup_path, class: "text-blue-600 hover:underline font-medium ml-1" %>
    </div>
  </div>
</div>

