<div class="flex items-center justify-center bg-white">
  <div class="w-full max-w-md bg-white border border-blue-200 rounded-lg shadow-md p-8">
    <h1 class="text-4xl font-bold text-blue-700 mb-6 text-center">Registre-se</h1>

    <%= form_with model: @user, class: "space-y-4" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-300 text-red-700 p-4 rounded-md">
          <h2 class="text-lg font-semibold mb-2">Formulário inválido</h2>
          <ul class="list-disc pl-5 text-sm">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-blue-600" %>
        <%= f.text_field :email, class: "mt-1 block w-full px-4 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-blue-600" %>
        <%= f.password_field :password, class: "mt-1 block w-full px-4 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-blue-600" %>
        <%= f.password_field :password_confirmation, class: "mt-1 block w-full px-4 py-2 border border-blue-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div>
        <%= f.submit "Registrar", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>

